<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--onDragDropped="#handleDrop" onDragOver="#handleDragOver"-->

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="530.0" prefWidth="936.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.geekbrains.filebox.client.fxcontrollers.SyncController">
    <children>
        <VBox>
            <children>
                <Label styleClass="fontverdabold" stylesheets="@../css/currentStyleCSS.css" text="Filebox on your computer">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin></Label>
                <TableView fx:id="tblClientContent" editable="true" minWidth="-Infinity" prefHeight="490.0" prefWidth="435.0" stylesheets="@../css/currentStyleCSS.css">
                    <columns>
                        <TableColumn fx:id="clientFileNameColumn" editable="false" prefWidth="337.0" resizable="false" text="File" />
                        <TableColumn fx:id="clientSizeColumn" editable="false" minWidth="1.0" prefWidth="97.0" resizable="false" text="Size (kb)" />
                    </columns>
                </TableView>
            </children>
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
        </VBox>
        <VBox>
            <children>
                <Button mnemonicParsing="false" onAction="#downloadFromServer" styleClass="fontverdabold" stylesheets="@../css/currentStyleCSS.css" text="&lt;">
                    <VBox.margin>
                        <Insets bottom="10.0" top="210.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#uploadToServer" styleClass="fontverdabold" stylesheets="@../css/currentStyleCSS.css" text="&gt;" />
            </children>
            <HBox.margin>
                <Insets top="10.0" />
            </HBox.margin>
        </VBox>
        <VBox>
            <children>
                <Label styleClass="fontverdabold" stylesheets="@../css/currentStyleCSS.css" text="FileBox on server">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin></Label>
                <TableView fx:id="tblServerContent" editable="true" minWidth="-Infinity" prefHeight="490.0" prefWidth="435.0" stylesheets="@../css/currentStyleCSS.css">
                    <columns>
                        <TableColumn fx:id="serverFileNameColumn" editable="false" prefWidth="337.0" resizable="false" text="File" />
                        <TableColumn fx:id="severSizeColumn" editable="false" minWidth="1.0" prefWidth="97.0" resizable="false" text="Size (kb)" />
                    </columns>
                </TableView>
            </children>
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
        </VBox>
    </children>
</HBox>
