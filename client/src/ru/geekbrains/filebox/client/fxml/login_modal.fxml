<VBox fx:id="rootElement" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="101.0"
      prefWidth="490.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.geekbrains.filebox.client.fxcontrollers.LoginController">
   <!--<VBox fx:id="rootElement" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="115.0" prefWidth="490.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.geekbrains.filebox.client.fxcontrollers.LoginController">-->

      <children>
         <GridPane id="upperPanel" layoutX="10.0" layoutY="10.0" prefHeight="94.0" prefWidth="490.0">
            <children>
               <TextField id="fieldLogin" fx:id="fieldLogin" styleClass="fontverdabold" promptText="admin">
                  <GridPane.margin>
                     <Insets left="15.0" right="10.0" top="10.0" />
                  </GridPane.margin>
                  <font>
                     <Font size="14.0" />
                  </font>
               </TextField>
               <PasswordField id="fieldPass" fx:id="fieldPass" styleClass="fontverdabold" promptText="12345" GridPane.rowIndex="1">
                  <GridPane.margin>
                     <Insets left="15.0" right="10.0" />
                  </GridPane.margin>
                  <font>
                     <Font size="14.0" />
                  </font>
               </PasswordField>
               <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
                  <children>
                     <Button id="btnLogin" mnemonicParsing="false" styleClass="fontverdabold" onAction="#loginToFileBox" prefHeight="28.0" prefWidth="100.0" stylesheets="@../css/gray.css" text="Login">
                        <font>
                           <Font name="Verdana Bold" size="12.0" />
                        </font>
                        <HBox.margin>
                           <Insets top="15.0" />
                        </HBox.margin>
                     </Button> <!--onAction="#sendFile"-->
                  <Button id="btnRegister" fx:id="reg" styleClass="fontverdabold" mnemonicParsing="false" onAction="#registerNew" prefHeight="28.0" prefWidth="100.0" stylesheets="@../css/gray.css" text="Register">
                     <HBox.margin>
                        <Insets left="25.0" right="5.0" top="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                     <CheckBox id="chbRemember" styleClass="fontverdabold" mnemonicParsing="false" stylesheets="@../css/gray.css" text="Remember me">
                        <opaqueInsets>
                           <Insets />
                        </opaqueInsets>
                     <HBox.margin>
                        <Insets top="15.0" />
                     </HBox.margin>
                     </CheckBox>
                  <Button id="btnLogin" fx:id="btnExit" styleClass="fontverdabold" mnemonicParsing="false" prefHeight="28.0" prefWidth="14.0" stylesheets="@../css/gray.css" visible="false">

                     <HBox.margin>
                        <Insets left="70.0" top="8.0" />
                     </HBox.margin>
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0">
                           <image>
                              <Image url="@../img/exit.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
      </GridPane>
   </children>
