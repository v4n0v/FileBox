<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox  prefHeight="630.0" prefWidth="465.0"  xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.geekbrains.filebox.client.ClientGUIFX">
   <children>
      <GridPane id="upperPanel" prefHeight="100.0" prefWidth="465.0">
         <children>
            <CheckBox id="chbRemember" mnemonicParsing="false" stylesheets="@../css/button.css" text="Remember me" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <GridPane.margin>
                  <Insets left="5.0" />
               </GridPane.margin>
            </CheckBox>
            <TextField fx:id="fieldLogin" promptText="login">
               <GridPane.margin>
                  <Insets left="15.0" right="10.0" top="8.0" />
               </GridPane.margin>
            </TextField>
            <PasswordField id="fieldPasss" promptText="password" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="15.0" right="10.0" />
               </GridPane.margin>
            </PasswordField>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
               <children>
                  <Button fx:id="btnLogin" onAction="#loginAction" prefHeight="28.0" prefWidth="100.0" stylesheets="@../css/button.css" text="Login">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" top="15.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Verdana Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnRegister" onAction="#sendFile" mnemonicParsing="false" prefHeight="28.0" prefWidth="100.0" stylesheets="@../css/button.css" text="Register">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
      </GridPane>
      <FlowPane prefHeight="504.0" prefWidth="465.0">
         <children>
            <TableView minWidth="-Infinity" prefHeight="490.0" prefWidth="435.0" stylesheets="@../css/button.css">
              <columns>
                <TableColumn prefWidth="205.0" resizable="false" text="File" />
                <TableColumn editable="false" minWidth="1.0" prefWidth="110.0" resizable="false" sortable="false" text="Date" />
                  <TableColumn editable="false" minWidth="1.0" prefWidth="119.0" resizable="false" sortable="false" text="Size" />
              </columns>
               <FlowPane.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" />
               </FlowPane.margin>
            </TableView>
         </children>
      </FlowPane>
   </children>
</VBox>
